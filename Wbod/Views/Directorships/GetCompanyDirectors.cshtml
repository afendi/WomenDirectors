@model IEnumerable<Wbod.Models.SimpleDirectorship>

@{
    ViewData["Title"] = "View List of Directors";
}
<div class="bd-example">
    @if (Model.Count() != 0)
    {
    <h4>@Model.First().Company for Year @Model.First().Year</h4>    
    }
    else
    {
    <h4>No records</h4>
    }
</div>
<p>
    @if (Model.Count() != 0)
    {
        <a asp-controller="Directorships" asp-action="GetDirectorList" asp-route-companyid="@Model.First().Companyid" asp-route-sessionid="@Model.First().SessionId" class="btn btn-primary">Add New Director to @Model.First().Company </a>
    }

</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CDP1)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CDP2)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DirectorAudit)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DirectorRenumeration)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DirectorNomination)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Directors" asp-route-id="@item.Directorid">@Html.DisplayFor(modelItem => item.DirectorName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CDP1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CDP2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorAudit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorRenumeration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorNomination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |               
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
