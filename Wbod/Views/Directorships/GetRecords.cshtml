@model IEnumerable<Wbod.Models.SimpleDirectorship>
@{
    ViewData["Title"] = "List Directors for Previous Years";
}

<div class="bd-example">
    @if (Model.Count() != 0)
    {
        <h4>@Model.First().Company for Year @Model.First().Year</h4>
    }
    else
    {
        <h4>No records</h4>
    }
</div>
<p>   

</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CDP1)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CDP2)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DirectorAudit)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DirectorRenumeration)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DirectorNomination)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Duration)
            </th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DirectorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CDP1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CDP2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DirectorAudit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DirectorRenumeration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DirectorNomination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
            </tr>
        }
    </tbody>
</table>
<a a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-secondary">Go Back</a>

