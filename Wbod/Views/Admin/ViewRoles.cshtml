@model IEnumerable<IdentityRole>

<div class="bd-example">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link" asp-action="Index">User Accounts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-action="ViewRoles">View Roles</a>
        </li>
    </ul>
</div>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <table class="table table-sm table-bordered table-bordered" id="RoleTable">
        <thead><tr><th>Name</th><th>Users</th><th></th></tr></thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No Roles</td></tr>
            }
            else
            {
                foreach (var role in Model)
                {
                    <tr>

                        <td>@role.Name</td>
                        <td identity-role="@role.Id"></td>
                        <td>

                            <a class="btn btn-sm btn-primary" asp-action="EditRoles"
                               asp-route-id="@role.Id">Edit Membership</a>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @section scripts{
        <script>
            $(function () {
                $('#RoleTable').DataTable({
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": false,
                    "info": true,
                    "autoWidth": true
                });
            });
        </script>
    }
