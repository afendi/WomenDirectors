@model IEnumerable<Wbod.Models.DB.Directors>
@{
    ViewData["Title"] = "List of Directors in Database";
}
<div class="bd-example">
    List of Directors in Database
</div>
<div class="container">
    <table class="table table-striped" id="dtable">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No Companies</td></tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>

                            <a class="btn btn-sm btn-info" asp-controller="Directors" asp-action="Details"
                               asp-route-id="@item.Id">Director Info</a>                            
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section scripts{

    <script>
        $(function () {
            $('#dtable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": false,
                "info": true,
                "autoWidth": true
            });
        });
    </script>

}
